{
  "name": "@algoan/nestjs-budget-insight-connector",
  "version": "0.0.1",
  "description": "Budget Insight connector for Algoan",
  "author": "ccoeurderoy",
  "license": "UNLICENSED",
  "scripts": {
    "postinstall": "node-config-ts",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "semantic-release": "semantic-release",
    "start": "nest start",
    "start:dev": "concurrently --kill-others \"npm run start:fake-server\" \"nest start --watch\"",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs}/**/*.ts\" --fix",
    "test": "USER=test jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json -i",
    "test:e2e:cov": "npm run test:e2e -- --coverage",
    "start:fake-server": "node json-server/server.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@algoan/nestjs-http-exception-filter": "^1.0.11",
    "@algoan/nestjs-logging-interceptor": "^2.1.9",
    "@algoan/rest": "^2.5.1",
    "@nestjs/axios": "^0.0.3",
    "@nestjs/common": "^8.2.3",
    "@nestjs/core": "^8.2.3",
    "@nestjs/platform-express": "^8.2.3",
    "axios": "^0.24.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "delay": "^4.4.1",
    "js-yaml": "^3.14.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "moment-timezone": "0.5.32",
    "nest-winston": "^1.6.1",
    "node-config-ts": "^3.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@algoan/eslint-config": "^1.1.4",
    "@commitlint/config-conventional": "^12.0.1",
    "@nestjs/cli": "^8.1.5",
    "@nestjs/schematics": "^8.0.5",
    "@nestjs/testing": "^8.2.3",
    "@semantic-release/exec": "^5.0.0",
    "@semantic-release/git": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.177",
    "@types/node": "^14.14.31",
    "@types/supertest": "^2.0.11",
    "commitlint": "^15.0.0",
    "concurrently": "^6.4.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-plugin-nestjs": "^1.2.3",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "json-server": "^0.17.0",
    "lint-staged": "^12.0.3",
    "nock": "^13.2.1",
    "prettier": "^2.4.1",
    "semantic-release": "^17.4.0",
    "semantic-release-docker": "^2.2.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.2",
    "ts-loader": "^9.1.1",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.11.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "{src,apps,libs}/**/*.ts": [
      "npm run lint"
    ],
    "{src,test}/**/*.ts": [
      "prettier --list-different \"{src,test}/**/*.ts\""
    ]
  }
}
